{
    "manifest_version": 2,

    "name": "XKCD Today",
    "description": "Serves latest posts from xkcd.com",
    "version": "0.0.0",

    "icons": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "http://xkcd.com/"
    ],
    "browser_action": {
        "default_icon": "images/icon19.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "fonts/*.*",
        "../bower_components/*.*"
    ]
}