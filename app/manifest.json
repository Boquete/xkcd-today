{
  "manifest_version": 2,
  "name": "XKCD Today",
  "description": "Serves latest posts from xkcd.com",
  "version": "0.1.0",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "http://xkcd.com/"
  ],
  "background": {
    "scripts": [
      "vendor/jquery/jquery.js",
      "js/eventPage.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_popup": "popup.html"
  }
}