{
    "manifest_version": 2,

    "name": "XKCD Today",
    "description": "Serves latest posts from xkcd.com",
    "version": "0.0.0",

    "permissions": [
        "http://xkcd.com/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "images/icon19.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "fonts/*.*",
        "../bower_components/*.*"
    ]
}